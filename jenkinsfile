pipeline{
agent any
tools {
jdk 'java17'
 maven 'maven3'
 }
 stages{
 stage('checkout')
 steps{
  git branch: 'main',
  url: 'https://github.com/Slade4r/ci-cd.git'
  }
  }
  stages('build'){
  steps{
  sh 'mvn clean compile'
}
}
stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
 post {
        success {
            emailext (
                subject: "SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: "Good news! Build & tests passed.\nCheck console output at ${env.BUILD_URL}",
                to: "himangshugoswami11@gmail.com"
            )
        }
